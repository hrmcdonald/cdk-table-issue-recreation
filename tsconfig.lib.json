{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc/libs/angular",
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["dom", "es2022"],
    "types": []
  },
  "exclude": [
    "src/test.ts",
    "src/cdk-testing/*.ts",
    "**/*.spec.ts",
    "**/stories/**/*.ts",
    "**/__stories__/*.ts",
    "**/__examples__/*.ts"
  ]
}
